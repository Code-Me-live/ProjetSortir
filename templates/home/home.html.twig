{% extends 'base.html.twig' %}

{% block title %}Page d'accueil !{% endblock %}

{% block body %}

    <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-body border-bottom shadow-sm">
        <p class="h5 my-0 me-md-auto fw-normal"></p>
        <nav class="my-2 my-md-0 me-md-3">
            <a class="p-2 text-dark" href="{{ url('home_home') }}">Accueil</a>
            <a class="p-2 text-dark" href="{{ url('app_logout') }}">Deconnexion</a>
            <a class="p-2 text-dark" href="{{ url('profil_user') }}">Mon profil</a>
            {% if app.user %}
                <span style="color:red">Bonjour {{ app.user.LastName }} !</span>

            {% else %}
                <a class="p-2 text-dark" href="{{ path('app_login') }}">Login</a>
            {% endif %}
        </nav>
        {# <a class="btn btn-outline-primary" href="#">Sign up</a>  #}
    </header>

    <span style="color:red">Participant : {{ app.user.LastName }} !</span><br>
    <span style="color:blue">Date du jour : {{ "now"|date('d/m/Y') }} </span><br>

    <h3>Filtrer les sorties</h3>

{% endblock %}