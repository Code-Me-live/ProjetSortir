{% extends 'base.html.twig' %}

{% block title %}Page de connexion ! {% endblock %}

{% block header %}{% endblock %}

{% block body %}
    <div class="row my-3"></div>
    <div class="col-sm-2 my-3 text-dark text-center align-items-center">
        <header class="pb-0 mb-0">SORTIR.COM</header>
    </div>
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-sm">
            <div class="conteneur">
                <div class="p-5">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h1 class="h3 mb-3 font-weight-normal">S'identifier</h1>
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>

                        <button class="btn btn-lg btn-primary" type="submit">
                            Connexion
                        </button>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>
                        Première visite sur Sortir.com ? Contacter {# app.user.. admin #} {'toto'}. {# déclencher sur le terme 'contacter' action boite mail #}
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm"></div>
    </div>

{% endblock %}
